<% layout("/layouts/boilerplate") %>
<!-- 
ðŸ§± Is page ka layout "layouts/boilerplate.ejs" hai.
Yaani page ke content ko layout ke  body placeholder ke andar inject kiya jayega.
-->

<div class="row">
  <div class="col-8 offset-2">
    <!-- ðŸ§± Container center mein laane ke liye: 8 column width + 2 column left offset -->

    <h3>Create a New Listing</h3>

    <form method="POST" action="/listings" novalidate class="needs-validation">

    <!-- 
    âœï¸ Ye form POST karega /listings par 
    - novalidate: HTML default validation disable karta hai (custom JS ke liye)
    - needs-validation: Bootstrap ka validation system use karega
    -->

      <!-- ðŸ·ï¸ Title Field -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input 
          name="listing[title]" 
          placeholder="enter title" 
          type="text" 
          class="form-control" 
          required
        />
        <div class="valid-feedback">Title looks good</div>
      </div>

      <!-- ðŸ“ Description Field -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <!-- ðŸ–¼ï¸ Image Link Field -->
      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input
          name="listing[image]"
          placeholder="enter image URL/Link"
          type="text"
          class="form-control"
        />
        <!-- ðŸ§  Note: image is optional so no required -->
      </div>

      <!-- ðŸ’° Price + ðŸŒŽ Country in a row -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input 
            name="listing[price]" 
            placeholder="enter price" 
            class="form-control" 
            required 
          />
          <div class="invalid-feedback">Price should be valid</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input 
            name="listing[country]" 
            placeholder="enter country" 
            type="text" 
            class="form-control" 
            required 
          />
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
      </div>

      <!-- ðŸ“ Location Field -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="enter location"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location should be valid</div>
      </div>

      <!-- âœ… Submit Button -->
      <button class="btn btn-dark add-btn">Add</button>
      <br /><br />
    </form>
  </div>
</div>

  