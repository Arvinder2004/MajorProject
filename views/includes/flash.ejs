<!-- âœ… Agar success message exist karta hai aur uski length > 0 hai -->
<% if(success && success.length) { %>

<!-- âœ… Success alert (green box) -->
<div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert">
    
    <!-- ðŸŸ¢ Success Message Content -->
    <%= success %>

    <!-- âŒ Close Button for dismissing the alert -->
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
</div>
<% } %>

<!-- âœ… Agar error message exist karta hai aur uski length > 0 hai -->
<% if(error && error.length) { %>

<!-- âŒ Error alert (red box) -->
<div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert">
    
    <!-- ðŸ”´ Error Message Content -->
    <%= error %>

    <!-- âŒ Close Button for dismissing the alert -->
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
</div>
<% } %>
