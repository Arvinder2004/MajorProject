<% layout("/layouts/boilerplate") %>
<!-- 
🧱 Ye line batata hai ki ye page "layouts/boilerplate.ejs" layout ka child hai.
- Layout file mein body placeholder hota hai jahan ye form inject hota hai.
- ejs-mate ka layout system enable karta hai reusable templates.
-->

<div class="row mt-3">
    <!-- 
    📦 Bootstrap grid ka row banaya gaya hai.
    - mt-3 = margin-top: 3 (upar se spacing)
    -->

    <h1 class="col-6 offset-3">Login</h1>
    <!-- 
    🖊️ Page ka heading hai "Login"
    - col-6 = half screen width
    - offset-3 = left side se 3 column ka gap → center alignment
    -->

    <div class="col-8 offset-3">
    <!-- 
    📦 Form container:
    - 8 column wide
    - 3 column left offset → slightly center
    -->

        <form action="/login" method="POST" class="needs-validation" novalidate>
        <!-- 
        📝 Form POST karega /login route pe.
        - class="needs-validation" = Bootstrap validation styling ke liye (optional)
        - novalidate = Browser ke default HTML validation ko disable karta hai (optional JS se control karne ke liye)
        -->

            <!-- ✅ Username Field -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input 
                    name="username" 
                    id="username"
                    type="text" 
                    class="form-control" 
                    required
                />
                <!-- 
                🧠 'name' attribute backend ke liye important hota hai (req.body.username)
                - form-control = Bootstrap class for styling input
                - required = HTML5 client-side validation
                -->
            </div>

            <!-- ✅ Password Field -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input 
                    name="password" 
                    id="password"
                    type="password" 
                    class="form-control" 
                    required
                />
                <!-- 🔒 Password input type, also required -->
            </div>

            <!-- ✅ Submit Button -->
            <button class="btn btn-success">Login</button>
            <!-- 
            ✅ Green colored submit button using Bootstrap's 'btn-success' class
            -->
        </form>

    </div>
</div>
